# -----------------------------------------------------------------------------
# Travel Tracker Environment Variables
#
# - For local development, copy this file to .env and fill in the values.
# - This file is used by all docker-compose.*.yml files and for running
#   the backend server locally.
# -----------------------------------------------------------------------------

# --- General Docker Compose Configuration ---
# Port for the frontend application (used by docker-compose.prod.yml and docker-compose.build.yml)
FRONTEND_PORT=80
# Port for the MinIO admin console (used by docker-compose.dbonly.yml and docker-compose.build.yml)
MINIO_CONSOLE_PORT=9001
# Version tag for Docker images (used by docker-compose.prod.yml)
VERSION=latest

# --- Backend Server (FastAPI) Configuration ---
# These are used by the 'backend' service and when running the server locally.
PORT=5002
# Comma-separated list of allowed origins for CORS.
# For production, set this to your frontend's domain (e.g., http://yourdomain.com)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5002

# --- MongoDB Configuration ---
# These credentials are used by the 'mongodb' service in Docker Compose
# and are also read by the backend server.
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=travel_tracker
# IMPORTANT: Use strong, unique values in your .env file.
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password

# --- MinIO (S3-Compatible Storage) Configuration ---
# These credentials are used by the 'minio' service in Docker Compose
# and are also read by the backend server.
MINIO_ENDPOINT=localhost:9000
MINIO_SECURE=False
# IMPORTANT: Use strong, unique values in your .env file.
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# --- Authentication (JWT) Configuration ---
# These are used by the backend server for signing and verifying tokens.
# IMPORTANT: Change SECRET_KEY in production to a long, random string
SECRET_KEY=your_super_secret_key_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- User Registration ---
# This key is required to register a new user via the API.
# IMPORTANT: Change REGISTRATION_KEY for user registration control
REGISTRATION_KEY=admin_secret_key